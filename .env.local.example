# Environment variables for Next.js apps using tinyplate skills
# Copy this to .env.local in your Next.js project

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Your app's public URL (used by payment providers for callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Your site URL (used for SEO: canonical URLs, OpenGraph, structured data)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =============================================================================
# ANALYTICS (PostHog Skill)
# =============================================================================

# PostHog project API key (get from https://app.posthog.com/project/settings)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_project_key_here

# PostHog host (us.i.posthog.com for US, eu.i.posthog.com for EU)
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# =============================================================================
# PAYMENTS - STRIPE (Stripe Skill)
# =============================================================================

# Stripe secret key (server-side only - never expose to client)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here

# Stripe webhook secret (for webhook signature verification)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe publishable key (client-side safe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# =============================================================================
# PAYMENTS - ABACATEPAY (AbacatePay Skill)
# =============================================================================

# AbacatePay API key (get from AbacatePay dashboard)
ABACATEPAY_API_KEY=abp_live_your_abacatepay_api_key_here

# AbacatePay webhook secret (for webhook signature verification)
ABACATEPAY_WEBHOOK_SECRET=whsec_your_abacatepay_webhook_secret_here

# =============================================================================
# AUTHENTICATION (if using Clerk)
# =============================================================================

# Clerk publishable key (client-side safe)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# Clerk secret key (server-side only)
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# =============================================================================
# CLOUDFLARE (Cloudflare Skill)
# =============================================================================

# Cloudflare API token (get from https://dash.cloudflare.com/profile/api-tokens)
# Required permissions: Zone:DNS:Edit, Zone:Zone:Read, Email Routing Addresses:Edit,
# Email Routing Rules:Edit, Account:R2:Edit
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Cloudflare account ID (found in dashboard URL or API)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# R2 Storage credentials (for file storage)
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_BUCKET_NAME=your_bucket_name_here

# =============================================================================
# DATABASE (if using a database service)
# =============================================================================

# Database connection string
DATABASE_URL=postgresql://username:password@localhost:5432/your_database_name

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
#
# 1. Replace all placeholder values with your actual keys
# 2. Never commit this file to version control
# 3. For production, use environment-specific values (staging/prod)
# 4. Test keys typically have "test_" prefix, live keys have "live_" or no prefix
#
# Get your keys from:
# - PostHog: https://app.posthog.com/project/settings
# - Stripe: https://dashboard.stripe.com/apikeys
# - AbacatePay: https://dashboard.abacatepay.com
# - Clerk: https://dashboard.clerk.com
# - Cloudflare: https://dash.cloudflare.com/profile/api-tokens</content>